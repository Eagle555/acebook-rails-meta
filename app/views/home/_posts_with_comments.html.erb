<h1>New Styling</h1>
<div class="container mt-5 mb-5">
  <div class="row d-flex align-items-center justify-content-center">
      <div class="col-md-6">
        <% @posts.each do |post| %>
          <% user = User.find(post.user_id) %>
          <div class="card">
            <div class="d-flex justify-content-between p-2 px-3">
            <div class="card-body">
            
              <h3 class="card-username">
                <img src="<%= user.avatar if user.avatar.attached? %>" alt="">
                <%= image_tag(user.avatar, height:"50px", class:"rounded-circle") if user.avatar.attached? %>
                <%= user.first_name %> <%= user.last_name %>        
              </h3>
              <div class="text-end">Posted at: <%= post.created_at.strftime("%d/%m/%Y") %></div>
              <%= image_tag(post.image, class:"card-img") if post.image.attached? %>
              <p><%= post.content %></p>
              <hr>
              Comment Count | <%= post.likes %> likes
              <hr>
              <div class="comments">
                <% post.comments.each do |comment| %>
                  <% user = User.find(comment.user_id) %>
                    <h6 class="card-username">
                      <img src="<%= user.avatar if user.avatar.attached? %>" alt="">
                      <%= image_tag(user.avatar, height:"50px", class:"rounded-circle") if user.avatar.attached? %>
                      <%= user.first_name %> <%= user.last_name %>        
                    </h6>
                  <%= comment.content %>
                <% end %>
              </div>
            </div>
            </div>
          </div>
          <br>
        <% end %>
    </div>
  </div>
</div>

<hr>
<h1>Old Styling</h1>
<div>
  <% @posts.reverse_each do |post| %>
    <% user = User.find(post.user_id) %>
    <div style="border:1px solid #000000;">
      <div style="border:1px solid #000000;">
        <% if user.avatar.attached? %>
        <%= image_tag(user.avatar, height:"50px") %>
        <% else %>
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTZYRo0nQdHum-G5HlyiHSiVYrXlyCQnaX3lA&usqp=CAU" style="height: 50px;">
        <% end %>
        <%= user.first_name %> <%= user.last_name %>
        <time>
          <%= display_post_time(post.created_at) %>
        </time>
      </div>
      <div style="border:1px solid #000000;">
        <%= image_tag(post.image, height:"250px") if post.image.attached? %>
        <%= post.content %>
      </div>
      <div style="border:1px solid #000000;">
        <%= post.likes %> Likes
        <% if current_user %>
        <%= link_to 'Like', like_path(post_id: post.id), method: :post%>
        <% end %>
        <br>
        Comments Link
      </div>
      <div style="border:1px solid #000000;">
        <%= link_to 'View Post', post%>
        <% if current_user %>
        <% if current_user.id == post.user_id %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <% end %>
      </div>
      <div style="border:1px solid #000000;">
        <table style="margin-left: 50px;">
        <h3 style="margin-left: 50px;">Comments</h3>
        <thead>
            <tr>
            <th>Content</th>
            <th>User</th>
            <th>Post</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% post.comments.reverse_each do |comment| %>
            <tr>
                <td><%= comment.content %></td>
                <td><%= comment.user_id %></td>
                <td><%= comment.post_id %></td>
                <td><%= link_to 'Show', comment %></td>
                <% if current_user %>
                <% if current_user.id == comment.user_id %>
                <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
                <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
                <% end %>
            </tr>
            <% end %>
        </tbody>
        
        </table>

        <br>
        <% if current_user %>
        <span style="margin-left: 50px;"><%= link_to 'New Comment', new_comment_path(post_id: post.id) %></span>
        <% end %>
        <br><br>
      </div>
    </div>
  <% end %>
</div>
