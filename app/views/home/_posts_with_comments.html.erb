<p id="notice"><%= notice %></p>
<div class="container mt-5 mb-5">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-6"><!--Sets card width-->
    <% if current_user %>
    <%= link_to '+ New Post', new_post_path, class:"btn btn-primary w-100 my-3 link-light text-decoration-none" %>
    <% end %>
    <% @posts.each do |post| %>
      <% user = User.find(post.user_id) %>
      <div class="card mb-3">
        <div class="d-flex justify-content-between p-2 px-3">
          <div class="d-flex flex-row align-items-center">
            <%= image_tag(user.avatar, height:"50px", class:"rounded-circle", alt:"avatar") if user.avatar.attached? %>
            <div class="fw-bold mx-2"><%= user.first_name %> <%= user.last_name %></div>
          </div>
          <div class="d-flex flex-row mt-1 text-muted"> <small class="pe-2"><%= post.created_at.strftime("%d/%m/%Y") %></small> <i class="bi bi-three-dots"></i> </div>
        </div>
        <%= image_tag(post.image, class:"card-img") if post.image.attached? %>
        <div class="card-body">
          <p class="card-text"><%= post.content %></p>
          <hr>
          <div class="d-flex justify-content-between align-items-center">
            <button type="button" class="btn btn-primary btn-sm">
                <i class="bi bi-hand-thumbs-up"></i>
                0 likes
            </button>
            <span class="text-muted"><%= post.comments.length %> comments</span>
          </div>
          <div class="comments">
          <% post.comments.each do |comment| %>
            <% user = User.find(comment.user_id) %>
            <hr>
            <div class="d-flex flex-row mb-2"> <%= image_tag(user.avatar, height:"50px", class:"rounded-circle", alt:"avatar") if user.avatar.attached? %>
              <div class="d-flex flex-column ml-2 mx-2"> 
                <span class="name"><%= user.first_name %> <%= user.last_name %></span>
                <div class="comment-text fw-light"><%= comment.content %></div>
                  <div class="d-flex flex-row align-items-center pt-1"> 
                  <% if current_user %>
                  <% if current_user.id == comment.user_id %>
                    <small class="pe-1"><%= link_to 'Edit', edit_comment_path(comment), class:"text-muted" %></small>
                    <small class="pe-1"><%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-muted" %></small>
                    <small class="pe-1 text-muted"><%= post.created_at.strftime("%d/%m/%Y") %></small> 
                  <% end %>
                  <% end %>
                  </div>
              </div>
            </div>
          <% end %>
          </div>
          <br>
        <% end %>
    </div>
  </div>
</div>

<hr>
