<%= form_for @user_session, url: user_sessions_url do |f| %>
  <% if @user_session.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited:</h2>
    <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  </br>
  <div class="cardc" style="width: 25rem;">
    <div class="row">
      <div class="col-4 mx-auto text-align-center">
      <div class="mb-3">
      <%= f.label :email %>
      <%= f.text_field :email, class:"form-control", id:"exampleInputEmail1"%>
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <%= f.label :password %>
      <%= f.password_field :password, class:"form-control", id:"exampleInputPassword1" %>
    </div>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class:"form-check-input", id:"exampleCheck1" %>
      <%= f.label :remember_me, class:"form-check-label", for:"exampleCheck1" %>
    </div>
    <%= f.submit "Login", class:"btn btn-primary" %>
    </div>
    </div>
</div>
<% end %>
